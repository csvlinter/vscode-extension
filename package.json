{
  "name": "csvlinter-vscode",
  "publisher": "csvlinter",
  "displayName": "CSVLinter",
  "description": "Lint CSV files using the csvlinter Go binary",
  "version": "1.1.4",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "./icon.png",
  "galleryBanner": {
    "color": "#0fce09",
    "theme": "dark"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/csvlinter/vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/csvlinter/vscode-extension/issues"
  },
  "activationEvents": [
    "onLanguage:csv"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "csv",
        "extensions": [
          ".csv"
        ],
        "aliases": [
          "CSV"
        ]
      }
    ],
    "commands": [
      {
        "command": "csvlinter.redownloadLinter",
        "title": "CSV Linter: Re-download Linter"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CSVLinter",
      "properties": {
        "csvlinter.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for the CSVLinter extension."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "semantic-release": "^24.2.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/tar": "^6.1.13",
    "tar": "^7.4.3"
  }
}
